<$list filter=<<pt-is-on-hold>>>
	<$button message="tm-remove-tag" tag="a" param={{$:/config/project-thing/on-hold-tag}} class="pt-toggle-on-hold-link">
		Totally On-hold
	</$button>
</$list>

<$list filter=<<pt-is-not-on-hold>>>
	<$button message="tm-add-tag" tag="a" param={{$:/config/project-thing/on-hold-tag}} class="pt-toggle-on-hold-link">
		Currently Doing
	</$button>
</$list>